@{
    ViewData["Title"] = "Shift";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-datepicker.min.css" rel="stylesheet" />
</head>

<div class="container mt-4">
    <!-- NAVIGAZIONE -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab" aria-controls="tab1" aria-selected="true">Workers</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#tab2" type="button" role="tab" aria-controls="tab2" aria-selected="false">Duration</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab3-tab" data-bs-toggle="tab" data-bs-target="#tab3" type="button" role="tab" aria-controls="tab3" aria-selected="false">Matrix Solver</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab4-tab" data-bs-toggle="tab" data-bs-target="#tab4" type="button" role="tab" aria-controls="tab4" aria-selected="false">CP-SAT Solver</button>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <!-- WORKERS -->
        <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
            <div id="select-container1" class="mt-3 p-3 border rounded">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="pippoCheck">
                    <label class="form-check-label ms-2" for="pippoCheck">Pippo</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input " type="checkbox" id="plutoCheck">
                    <label class="form-check-label ms-2" for="plutoCheck">Pluto</label>
                </div>
            </div>
        </div>
        <!-- DURATION -->
        <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
            <div id="select-container2" class="mt-3">
                <div class="form-floating mb-3" data-provide="datepicker">
                    <input type="date" class="form-control" id="fromDate">
                    <label for="fromDate">Start</label>
                </div>
                <div class="form-floating mb-3" data-provide="datepicker">
                    <input type="date" class="form-control" id="toDate">
                    <label for="toDate">End</label>
                </div>
            </div>
            <button class="btn btn-danger mb-2" onclick="eraseDatepicker()">Reset</button>
        </div>
        <!-- MATRIX SOLVER -->
        <div class="tab-pane fade" id="tab3" role="tabpanel" aria-labelledby="tab3-tab">
            <div id="select-container3" class="mt-3">
                <button class="btn btn-outline-primary mb-2" onclick="">Generate shift</button>
                
            </div>
        </div>
        <!-- LINEAR SOLVER -->
        <div class="tab-pane fade" id="tab4" role="tabpanel" aria-labelledby="tab4-tab">
            <div id="select-container4" class="mt-3">
                <button class="btn btn-outline-primary mb-2" onclick="">Generate shift</button>
            </div>
        </div>
    </div>
</div>

<script>
    function eraseDatepicker() {
        $('#fromDate').val('');
        $('#toDate').val('');
    }
</script>
